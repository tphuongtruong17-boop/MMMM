{
    "name": "@btc-vision/logger",
    "type": "module",
    "version": "1.0.8",
    "author": "BlobMaster41",
    "description": "More than your typical logger. Why not bring style to your logs? The OPNet Logger library allows you to create and style logs for your OPNet applications. Written in TypeScript!",
    "engines": {
        "node": ">=16.0.0"
    },
    "exports": {
        ".": {
            "browser": {
                "types": "./build/opnet-browser.d.ts",
                "import": "./build/opnet-browser.js",
                "require": "./build/opnet-browser.js"
            },
            "node": {
                "types": "./build/node.d.ts",
                "import": "./build/node.js",
                "require": "./build/node.js"
            },
            "types": "./build/node.d.ts",
            "import": "./build/node.js",
            "require": "./build/node.js"
        }
    },
    "browser": {
        "./build/node.js": "./build/opnet-browser.js",
        "./build/node.d.ts": "./build/opnet-browser.d.ts"
    },
    "homepage": "https://opnet.org",
    "keywords": [
        "opnet",
        "bsi",
        "bsi-binary",
        "logger",
        "browser logger",
        "bitcoin",
        "btc",
        "bitcoin smart contracts",
        "smart inscriptions",
        "ordinals"
    ],
    "license": "MIT",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "typings": "build/index.d.ts",
    "module": "build/index.js",
    "publishConfig": {
        "access": "public",
        "tag": "latest"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/btc-vision/logger.git"
    },
    "scripts": {
        "watch": "tsc --watch",
        "build": "eslint src && tsc",
        "setup": "npm i && npm run build",
        "browserBuild": "webpack --mode production",
        "docs": "typedoc --out docs --tsconfig tsconfig.json --readme README.md --name OPNet --plugin typedoc-material-theme --themeColor '#cb9820' --exclude src/scripts/test.ts --exclude src/index.ts src"
    },
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-transform-runtime": "^7.24.3",
        "@babel/preset-env": "^7.24.5",
        "@babel/preset-flow": "^7.24.1",
        "@babel/preset-react": "^7.24.1",
        "@babel/preset-typescript": "^7.24.1",
        "@types/node": "^20.11.30",
        "eslint": "9.38.0",
        "prettier": "^3.3.1",
        "typedoc": "^0.26.7",
        "typedoc-material-theme": "^1.1.0",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.5.0",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@babel/core": "^7.25.2",
        "@eslint/js": "9.38.0",
        "assert": "^2.1.0",
        "babel-loader": "^9.1.3",
        "babel-plugin-transform-import-meta": "^2.2.1",
        "babel-preset-react": "^6.24.1",
        "babelify": "^10.0.0",
        "chalk": "^5.3.0",
        "supports-color": "^9.4.0",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2"
    }
}
